<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpagewallpaper"
    tools:context=".AllEvents">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="218dp"
        android:layout_height="34dp"
        android:layout_marginTop="84dp"
        android:background="@color/design_default_color_error"
        android:fontFamily="@font/aclonica"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:text="All Events"
        android:textColor="#F1F3EF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/techBtn"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/prof_btn"
        android:text="Technical Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/musicBtn"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/all_events_btn"
        android:text="Music Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/techBtn" />

    <Button
        android:id="@+id/danceBtn"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/my_events_btn"
        android:text="Dance Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicBtn" />

    <Button
        android:id="@+id/foodBtn"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/prof_btn"
        android:text="Food Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danceBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>